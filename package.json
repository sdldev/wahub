{
  "name": "wahub",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "NODE_NO_WARNINGS=1 tsx --watch apps/server/index.ts",
    "build": "npm run build:web && npm run build:api",
    "build:web": "cd apps/web && npm run build",
    "build:api": "echo 'API build not required - using tsx'",
    "start": "NODE_NO_WARNINGS=1 tsx apps/server/index.ts",
    "start:prod": "NODE_ENV=production NODE_NO_WARNINGS=1 tsx apps/server/index.ts",
    "test": "echo 'Tests will be added'",
    "test:api": "cd apps/api && npm test",
    "lint": "eslint apps/**/*.ts apps/**/*.tsx",
    "lint:check": "eslint apps/**/*.ts apps/**/*.tsx",
    "lint:fix": "eslint apps/**/*.ts apps/**/*.tsx --fix",
    "format": "prettier --check apps/**/*.{ts,tsx} *.json --ignore-path .prettierignore",
    "format:check": "prettier --check apps/**/*.{ts,tsx} *.json --ignore-path .prettierignore",
    "format:fix": "prettier --write apps/**/*.{ts,tsx} *.json --ignore-path .prettierignore",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx scripts/seed.ts"
  },
  "author": {
    "name": "santrimu",
    "email": "satrimuhub@gmail.com"
  },
  "license": "ISC",
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.8.2",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "debug": "~2.6.9",
    "dotenv": "^16.0.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.7",
    "ejs": "^3.1.8",
    "express": "^4.21.2",
    "hono": "^4.10.3",
    "http-errors": "~1.6.3",
    "jimp": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "~1.10.1",
    "mysql2": "^3.15.3",
    "qrcode": "^1.5.1",
    "sharp": "^0.34.4",
    "tsx": "^4.19.2",
    "wa-multi-session": "^3.8.3",
    "winston": "^3.18.3",
    "zod": "^3.23.8"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sdldev/wahub.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node": "^22.10.1",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "typescript": "^5.9.3"
  }
}
