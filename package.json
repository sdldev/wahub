{
  "name": "wahub",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_NO_WARNINGS=1 bun --hot src/index.ts",
    "start": "NODE_NO_WARNINGS=1 bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "test": "bun test",
    "lint": "eslint src/**/*.ts",
    "lint:check": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --check src/**/*.ts *.json --ignore-path .prettierignore",
    "format:check": "prettier --check src/**/*.ts *.json --ignore-path .prettierignore",
    "format:fix": "prettier --write src/**/*.ts *.json --ignore-path .prettierignore",
    "type-check": "bun run build"
  },
