# Docker Environment Variables
# Copy file ini menjadi .env dan sesuaikan dengan kebutuhan

# Server Configuration
NODE_ENV=production
PORT=5001

# API Security
KEY=your-very-secure-api-key-change-this

# Webhook Configuration (Optional)
WEBHOOK_BASE_URL=

# Database Configuration
DATABASE_URL=file:./data/app.db

# Redis Configuration (untuk Queue Management)
REDIS_URL=redis://redis:6379

# Rate Limiting Configuration
MESSAGE_DELAY_MIN=3000
MESSAGE_DELAY_MAX=7000
MAX_MESSAGES_PER_MINUTE=20
MAX_MESSAGES_PER_HOUR=500
MAX_MESSAGES_PER_RECIPIENT=10
MAX_RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/app/media